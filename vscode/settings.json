// Place your settings in this file to overwrite the default settings
{
  // Controls if the editor will insert spaces for tabs. Accepted values:  "auto", true, false. If set to "auto", the value will be guessed when a file is opened.
  "editor.insertSpaces": false,

  // Controls after how many characters the editor will wrap to the next line. Setting this to 0 turns on viewport width wrapping
  "editor.wordWrapColumn": 100,
  // "editor.wordWrap": "wordWrapColumn",
  "editor.rulers": [100],

  // Wrap at ruler in markdown
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": false
  },

  // Controls if the editor should automatically format the line after typing
  "editor.formatOnType": true,

  // Prettier format on save
  "editor.formatOnSave": false,
  // Enable per-language
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[vue]": {
    "editor.formatOnSave": false
  },

  "python.formatting.provider": "black",
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,

  },
  "autoDocstring.generateDocstringOnEnter": true,
  
  "workbench.colorTheme": "Night Owl",
  "window.zoomLevel": 1,

  // https://github.com/crsandeep/simple-react-full-stack
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": false,

  "prettier.eslintIntegration": false,

  "workbench.activityBar.visible": false,
  "workbench.editor.showTabs": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.feedback.visible": false,
  "vsicons.dontShowNewVersionMessage": true,

  "code-runner.executorMapByFileExtension": {
    ".pde": "processing-java --sketch=$dir --run"
  },
  "workbench.iconTheme": "vscode-icons",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "python.jediEnabled": false,
  "gitlens.views.repositories.location": "scm",
  "gitlens.views.fileHistory.location": "scm",
  "gitlens.views.lineHistory.location": "scm",
  "gitlens.views.compare.location": "scm",
  "gitlens.views.search.location": "scm",
  "gitlens.menus": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.scrollable": false,
  "gitlens.blame.heatmap.location": "left",
  "gitlens.blame.highlight.locations": [
    "gutter",
    "line",
    "overview"
  ],
  "gitlens.hovers.enabled": false,
  "gitlens.codeLens.scopes": [
    "document"
  ],
  "gitlens.codeLens.enabled": false,
  "gitlens.recentChanges.highlight.locations": [
    "overview",
    "gutter"
  ],
  "gitlens.currentLine.enabled": false,
  "gitlens.views.repositories.files.compact": false,
  "gitlens.views.repositories.avatars": false,
  "gitlens.mode.statusBar.enabled": false,
  "liveshare.featureSet": "insiders"
}
