{
  "update.mode": "manual",

  // ---------------------------------------------------------------------------
  // Theme
  "workbench.colorTheme": "Copilot Theme",
  "workbench.iconTheme": "bearded-icons",

  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#FFFFFF08",
    "editor.selectionHighlightBackground": "#FFFFFF0F",
    "editor.lineHighlightBackground": "#FFFFFF08",
    "editor.lineHighlightBorder": "#FFFFFF02",
    "editorInlayHint.background": "#FFFFFF25",
    "editorInlayHint.foreground": "#00000080",
    "scrollbar.shadow": "#00000030"
  },


  // ---------------------------------------------------------------------------
  // Font

  // 0123456789 The quick brown fox jumps over the lazy dog
  // => --> -< <> >>= >= << !! ++ -- fi == != *** ## <~> (*) :: || <| /> /**

  // "editor.fontFamily": "Monaspace Neon Var",
  // "editor.fontLigatures": "'ss03', 'ss04', 'ss06', 'ss07', 'ss08', 'calt'",
  // "editor.fontWeight": "450",
  // "editor.inlayHints.fontFamily": "Monaspace Krypton Var",

  "editor.fontFamily": "'Fira Code', 'Berkeley Mono', monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.fontSize": 12,

  "terminal.integrated.fontFamily": "'Berkeley Mono', 'Fira Code', monospace",
  "terminal.integrated.fontSize": 12,


  // ---------------------------------------------------------------------------
  // Editor

  "editor.rulers": [80, 100],
  "editor.wordWrapColumn": 100, // Uses Viewport if set to 0
  "editor.wordWrap": "off",

  "editor.tabSize": 2,
  "editor.insertSpaces": false,
  "editor.detectIndentation": true,

  "editor.formatOnType": false,
  "editor.formatOnSave": false,

  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.bracketPairColorization.enabled": true,
  "editor.suggestSelection": "first",
  "editor.glyphMargin": false, // Debug info column
  "editor.accessibilitySupport": "off",
  "editor.inlineSuggest.enabled": true,

  "editor.minimap.maxColumn": 80,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,


  // ---------------------------------------------------------------------------
  // Workbench

  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.splitInGroupLayout": "vertical",
  "workbench.editor.empty.hint": "hidden",

  "workbench.activityBar.location": "hidden",
  "workbench.tree.indent": 14,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.editor": "json",

  "window.titleBarStyle": "native",
  "breadcrumbs.enabled": true,

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "files.exclude": {
    "**/__pycache__/": true,
    "node_modules/": true,
  },


  // ---------------------------------------------------------------------------
  // Telemetry

  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "gitlens.telemetry.enabled": false,


  // ---------------------------------------------------------------------------
  // Language specific settings

  "files.associations": {
    "*.html": "html",
    "*.py": "python",
    "*.module.css": "css"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },

  // Markdown

  "[markdown]": {
    "editor.rulers": [80],
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
  },
  "[rmd]": {
    "editor.rulers": [80],
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // Python

  "[python]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": false,
  },
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "notebook.output.textLineLimit": 1000,
  "notebook.cellToolbarVisibility": "hover",
  "notebook.diff.ignoreMetadata": true,
  "notebook.lineNumbers": "on",
  "jupyter.askForKernelRestart": false,
  "jupyter.changeDirOnImportExport": true,
  "jupyter.alwaysTrustNotebooks": true,

  // Rust

  "[rust]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,
      "source.fixAll": true
    },
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
  },
  // "rust-analyzer.inlayHints.renderColons": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.check.command": "clippy",

  // Web / JS

  "[html]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  "[scss]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint",
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    }
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[graphql]": {
    "editor.formatOnSave": true
  },
  "[prisma]": {
    "editor.formatOnSave": true
  },
  "[svelte]": {
    "editor.formatOnSave": true
  },
  "[postcss]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  // https://github.com/crsandeep/simple-react-full-stack
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.run": "onSave",
  "eslint.rules.customizations": [
    {
      "rule": "react/self-closing-comp",
      "severity": "warn",
    }
  ],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "react-native-tools.showUserTips": false,
  "emmet.includeLanguages": {},
  "emmet.excludeLanguages": [
    "typescriptreact"
  ],

  // Misc languages

  "[dotenv]": {
    "github.copilot.editor.enableAutoCompletions": false,
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "[FortranFreeForm]": {
    "editor.insertSpaces": true
  },
  "[lua]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },


  // ---------------------------------------------------------------------------
  // Extensions

  "extensions.ignoreRecommendations": true,
  "vsicons.dontShowNewVersionMessage": true,

  "githubPullRequests.ignoredPullRequestBranches": [
    "master",
    "main"
  ],
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "dotenv": false,
    "terraform-vars": false
  },

  "apc.electron": {
    "titleBarStyle": "hidden",
    "trafficLightPosition": {
      "x": 14,
      "y": 14
    },
  },
  "apc.parts.font.family": {
    "sidebar": "Berkeley Mono",
    "statusbar": "Berkeley Mono",
    "tabs": "Berkeley Mono",
    "panel": "Berkeley Mono",
  },
  "apc.statusBar": {
    "fontSize": 12,
    "position": "editor-bottom",
    "height": 30
  },
  "apc.listRow": {
    "height": 22,
    "fontSize": 12,
  },
  "apc.stylesheet": {
    ".line-numbers": "padding-left: 3px",
    ".explorer-folders-view.custom-list-row .monaco-list-row": "border-bottom: 1px solid #00000020;",
    ".explorer-folders-view.custom-list-row .monaco-list-row[data-parity='even']": "background-color: #00000011;",
  },

  "codesnap.showWindowTitle": false,
  "codesnap.showWindowControls": false,
  "codesnap.backgroundColor": "#0000",
  "codesnap.transparentBackground": true,
  "codesnap.boxShadow": "rgba(0, 0, 0, 0) 0px 0px 0px",
  "codesnap.containerPadding": "0",

  "gitlens.showWelcomeOnInstall": false,
  "gitlens.views.repositories.files.compact": false,
  "gitlens.views.repositories.avatars": false,
  "gitlens.menus": false,
  "gitlens.mode.statusBar.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.scrollable": false,
  "gitlens.blame.heatmap.location": "left",
  "gitlens.blame.highlight.locations": ["gutter", "line", "overview"],
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.scopes": ["document"],
  "gitlens.currentLine.pullRequests.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.currentLine.changes": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.hovers.annotations.enabled": false,

  "tabnine.experimentalAutoImports": true,
  "tabnine.disable_file_regex": ["settings.json$", ".env$", ".rs$"],

  "docker.showStartPage": false,


  // ---------------------------------------------------------------------------
  // Misc

  "git.autofetch": true,
  "azure.resourceFilter": [
    "0f16d077-bd82-4a6c-b498-52741239205f/b7ef0cfa-36d4-4ba9-9063-f5868bf1273e"
  ],
}
