{
  // Font
  "editor.fontFamily": "'Fira Code', 'Iosevka Type', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontWeight": "400",
  "editor.fontLigatures": true, // -> ++ -- >= <= <>

  // Controls after how many characters the editor will wrap to the next line. Setting this to 0
  // turns on viewport width wrapping
  "editor.wordWrapColumn": 100,
  // "editor.wordWrap": "wordWrapColumn",
  "editor.rulers": [80, 100],

  // Controls if the editor will insert spaces for tabs. Accepted values:  "auto", true, false. If
  // set to "auto", the value will be guessed when a file is opened.
  "editor.insertSpaces": false,

  // Controls if the editor should automatically format the line after typing
  "editor.formatOnType": false,

  // Linting format on save
  "editor.formatOnSave": false,

  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.bracketPairColorization.enabled": true,

  "editor.suggestSelection": "first",
  "editor.glyphMargin": false, // Cmd +
  "emmet.includeLanguages": {},
  "emmet.excludeLanguages": [
    "typescriptreact"
  ],
  "files.trimTrailingWhitespace": true,

  "workbench.colorTheme": "Gruvbox Dark Soft",
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.tree.indent": 14,
  "editor.detectIndentation": true,
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#FFFFFF08",
    "editor.selectionHighlightBackground": "#FFFFFF0F",
    "editor.lineHighlightBackground": "#FFFFFF08",
    "editor.lineHighlightBorder": "#FFFFFF02",
  },
  "workbench.activityBar.visible": true,
  "workbench.editor.showTabs": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.revealIfOpen": true,
  "workbench.settings.editor": "json",

  "breadcrumbs.enabled": true,

  "window.titleBarStyle": "native",

  "telemetry.telemetryLevel": "off",

  "extensions.ignoreRecommendations": true,

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/__pycache__/": true,
    "node_modules/": true,
  },
  "files.associations": {
    "*.html": "html",
    "*.py": "python",
    "*.module.css": "postcss"
  },

  // Per-language settings

  "[markdown]": {
    // Wrap at ruler
    "editor.rulers": [80],
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[rmd]": {
    // Wrap at ruler
    "editor.rulers": [80],
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[python]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": false,
    // "editor.autoIndent": "full",
  },
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.showStartPage": false,
  "jupyter.askForKernelRestart": false,
  "jupyter.changeDirOnImportExport": true,
  "jupyter.alwaysTrustNotebooks": true,
  "autoDocstring.generateDocstringOnEnter": true,

  "[rust]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "statiolake.vscode-rustfmt"
  },

  "[html]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  "[scss]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint",
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    }
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // https://github.com/crsandeep/simple-react-full-stack
  "eslint.alwaysShowStatus": true,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.run": "onSave",
  "eslint.rules.customizations": [
    {
      "rule": "react/self-closing-comp",
      "severity": "warn",
    }
  ],

  "[FortranFreeForm]": {
    "editor.insertSpaces": true
  },

  // Extensions

  "vsicons.dontShowNewVersionMessage": true,

  "code-runner.executorMapByFileExtension": {
    ".pde": "processing-java --sketch=$dir --run"
  },

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "liveshare.featureSet": "insiders",

  "codesnap.showWindowTitle": false,
  "codesnap.showWindowControls": false,
  "codesnap.backgroundColor": "#0000",
  "codesnap.transparentBackground": true,
  "codesnap.boxShadow": "rgba(0, 0, 0, 0) 0px 0px 0px",
  "codesnap.containerPadding": "0",

  "tabnine.experimentalAutoImports": true,
  "tabnine.disable_file_regex": ["settings.json$", ".env$", ".rs$"],

  // Customize UI
  "customizeUI.titleBar": "inline",
  "customizeUI.activityBar": "bottom",
  "customizeUI.listRowHeight": 18,
  // "customizeUI.fontSizeMap": {
  //   "13px": "12px",
  //   // "monospace": "12px"
  // },
  "customizeUI.stylesheet": {
    ".editor-actions": "display: none !important;"
  },

  // GitLens
  "gitlens.views.repositories.files.compact": false,
  "gitlens.views.repositories.avatars": false,
  "gitlens.menus": false,
  "gitlens.mode.statusBar.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.scrollable": false,
  "gitlens.blame.heatmap.location": "left",
  "gitlens.blame.highlight.locations": ["gutter", "line", "overview"],
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.scopes": [
    "document"
  ],
  "gitlens.currentLine.pullRequests.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.currentLine.changes": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.hovers.annotations.enabled": false,

  "docker.showStartPage": false,

  "liveServer.settings.donotShowInfoMsg": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "editor.minimap.maxColumn": 60,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "notebook.cellToolbarVisibility": "hover",
  "notebook.diff.ignoreMetadata": true,
  "notebook.lineNumbers": "on",
  "git.autofetch": true,
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "workbench.editor.splitInGroupLayout": "vertical",
  "editor.accessibilitySupport": "off",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "editor.tabSize": 2,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.iconTheme": "vscode-icons",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "azure.resourceFilter": [
    "0f16d077-bd82-4a6c-b498-52741239205f/b7ef0cfa-36d4-4ba9-9063-f5868bf1273e"
  ],
  "workbench.editor.untitled.hint": "hidden",
  "react-native-tools.showUserTips": false,
  "[postcss]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  "redhat.telemetry.enabled": false,
  "window.zoomLevel": 1,
}
