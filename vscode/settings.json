{
  // Font
  "editor.fontFamily": "'Fira Code', 'Iosevka Type', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontWeight": "500",
  "editor.fontLigatures": true, // -> ++ -- >= <= <>

  // Controls after how many characters the editor will wrap to the next line. Setting this to 0 
  // turns on viewport width wrapping
  "editor.wordWrapColumn": 100,
  // "editor.wordWrap": "wordWrapColumn",
  "editor.rulers": [100],

  // Controls if the editor will insert spaces for tabs. Accepted values:  "auto", true, false. If 
  // set to "auto", the value will be guessed when a file is opened.
  "editor.insertSpaces": false,

  // Controls if the editor should automatically format the line after typing
  "editor.formatOnType": false,

  // Linting format on save
  "editor.formatOnSave": false,

  "editor.suggestSelection": "first",
  "editor.glyphMargin": false, // Cmd +

  "workbench.colorTheme": "Tokyo City Darker",
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.tree.indent": 14,
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#FFFFFF08",
    "editor.selectionHighlightBackground": "#FFFFFF0F"
  },
  "workbench.activityBar.visible": false,
  "workbench.editor.showTabs": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.revealIfOpen": true,
  "workbench.settings.editor": "json",

  "breadcrumbs.enabled": true,

  "window.titleBarStyle": "native",
  "window.zoomLevel": 1,

  "telemetry.enableTelemetry": false,

  "extensions.ignoreRecommendations": true,

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "files.exclude": {
    "**/__pycache__/": true
  },
  "files.associations": {
    "*.html": "html"
  },

  // Per-language settings

  "[markdown]": {
    // Wrap at ruler
    "editor.rulers": [80],
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": false
  },
  "[rmd]": {
    // Wrap at ruler
    "editor.rulers": [80],
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": false
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.formatOnSave": false
  },
  "python.pythonPath": "~/.miniconda3/bin/python",
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.showStartPage": false,
  "jupyter.askForKernelRestart": false,
  "jupyter.changeDirOnImportExport": true,
  "jupyter.alwaysTrustNotebooks": true,
  "autoDocstring.generateDocstringOnEnter": true,

  "[rust]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "statiolake.vscode-rustfmt"
  },

  "[html]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  "[scss]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint",
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    }
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // https://github.com/crsandeep/simple-react-full-stack
  "eslint.alwaysShowStatus": true,
  "eslint.codeActionsOnSave.mode": "all",
  
  "[FortranFreeForm]": {
    "editor.insertSpaces": true
  },

  // Extensions

  "vsicons.dontShowNewVersionMessage": true,

  "code-runner.executorMapByFileExtension": {
    ".pde": "processing-java --sketch=$dir --run"
  },

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "liveshare.featureSet": "insiders",

  "polacode.backgroundColor": "#0000", // transparent (#RGBA)
  "polacode.transparentBackground": true,
  "polacode.shadow": "rgba(0, 0, 0, 0) 0px 0px 0px",

  "emmet.triggerExpansionOnTab": true,

  "tabnine.experimentalAutoImports": true,
  "tabnine.disable_file_regex": ["settings.json$", ".env$", ".rs$"],

  // Customize UI
  "customizeUI.titleBar": "inline",
  "customizeUI.activityBar": "bottom",
  "customizeUI.stylesheet": {
    ".editor-actions": "display: none !important;"
  },
  
  // GitLens
  "gitlens.views.repositories.files.compact": false,
  "gitlens.views.repositories.avatars": false,
  "gitlens.menus": false,
  "gitlens.mode.statusBar.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.scrollable": false,
  "gitlens.blame.heatmap.location": "left",
  "gitlens.blame.highlight.locations": ["gutter", "line", "overview"],
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.scopes": [
    "document"
  ],
  "gitlens.currentLine.pullRequests.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.currentLine.changes": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.hovers.annotations.enabled": false,

  "docker.showStartPage": false,
  
  "liveServer.settings.donotShowInfoMsg": true,
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ]
}
