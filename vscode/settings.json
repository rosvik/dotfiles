// Place your settings in this file to overwrite the default settings
{
  // Controls if the editor will insert spaces for tabs. Accepted values:  "auto", true, false. If set to "auto", the value will be guessed when a file is opened.
  "editor.insertSpaces": false,

  // Controls after how many characters the editor will wrap to the next line. Setting this to 0 turns on viewport width wrapping
  "editor.wordWrapColumn": 100,
  // "editor.wordWrap": "wordWrapColumn",
  "editor.rulers": [80, 100],

  "editor.suggestSelection": "first",

  "emmet.triggerExpansionOnTab": true,

  // Controls if the editor should automatically format the line after typing
  "editor.formatOnType": false,

  // Prettier format on save
  "editor.formatOnSave": false,

  "files.exclude": {
    "**/__pycache__/": true
  },

  // Enable per-language
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.formatOnSave": false
  },

  "[html]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "[scss]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint",
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    },
  },

  // Wrap at ruler in markdown
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": false
  },

  "python.formatting.provider": "black",
  "python.jediEnabled": false,
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.formatOnSave": false,
  },
  "autoDocstring.generateDocstringOnEnter": true,
  "window.zoomLevel": 1,

  // https://github.com/crsandeep/simple-react-full-stack
  "eslint.alwaysShowStatus": true,
  "eslint.codeActionsOnSave.mode": "all",

  "workbench.activityBar.visible": false,
  "workbench.editor.showTabs": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.feedback.visible": false,
  "vsicons.dontShowNewVersionMessage": true,

  "code-runner.executorMapByFileExtension": {
    ".pde": "processing-java --sketch=$dir --run"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "liveshare.featureSet": "insiders",

  // GitLens
  "gitlens.views.repositories.location": "scm",
  "gitlens.views.fileHistory.location": "scm",
  "gitlens.views.lineHistory.location": "scm",
  "gitlens.views.compare.location": "scm",
  "gitlens.views.search.location": "scm",
  "gitlens.views.repositories.files.compact": false,
  "gitlens.views.repositories.avatars": false,
  "gitlens.menus": false,
  "gitlens.mode.statusBar.enabled": false,
  "gitlens.hovers.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.enabled": false,
  "gitlens.currentLine.scrollable": false,
  "gitlens.blame.heatmap.location": "left",
  "gitlens.blame.highlight.locations": ["gutter", "line", "overview"],
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.scopes": ["document"],
  "gitlens.recentChanges.highlight.locations": [
    "overview",
    "gutter"
  ],
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "extensions.ignoreRecommendations": true,
  "polacode.backgroundColor": "transparent",
  "polacode.transparentBackground": true,
  "polacode.shadow": "rgba(0, 0, 0, 0) 0px 0px 0px",
  "python.pythonPath": "/Users/rosvik/.miniconda3/bin/python",
  "files.associations": {
    "*.html": "html"
  },
  "extensions.showRecommendationsOnlyOnDemand": true,
  "workbench.tree.indent": 14,
  "editor.minimap.enabled": true,
  "editor.glyphMargin": false,
  "workbench.colorTheme": "Night Owl",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
}
